<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.curator.backend.register.exam.site.mapper.ExamSiteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.curator.backend.register.exam.site.entity.ExamSite">
        <id column="exam_site_id" property="examSiteId" />
        <result column="exam_site_name" property="examSiteName" />
        <result column="number_limit" property="numberLimit" />
        <result column="province" property="province" />
        <result column="city" property="city" />
        <result column="district" property="district" />
        <result column="create_account_id" property="createAccountId" />
        <result column="parent_account_id" property="parentAccountId" />
        <result column="is_deleted" property="deleted" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="selectMaxSerialNum" resultType="java.lang.Integer">
        select max(serial_num) from exam_site where district = #{district} and is_deleted = 0
    </select>

</mapper>
