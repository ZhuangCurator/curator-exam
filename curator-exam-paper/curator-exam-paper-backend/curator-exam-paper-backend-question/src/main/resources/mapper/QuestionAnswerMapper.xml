<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.curator.backend.paper.question.mapper.QuestionAnswerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.curator.backend.paper.question.entity.QuestionAnswer">
        <id column="question_answer_id" property="questionAnswerId" />
        <result column="question_id" property="questionId" />
        <result column="content" property="content" />
        <result column="question_point" property="questionPoint" />
        <result column="is_right" property="right" />
        <result column="create_account_id" property="createAccountId" />
        <result column="parent_account_id" property="parentAccountId" />
        <result column="is_deleted" property="deleted" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <insert id="batchAddQuestionAnswer">
        insert into question_answer(question_answer_id,question_id,content,question_point,is_right,
        create_account_id,parent_account_id,is_deleted,create_time,update_time)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.questionAnswerId}, #{item.questionId}, #{item.content}, #{item.questionPoint}, #{item.right},
            #{item.createAccountId}, #{item.parentAccountId}, #{item.deleted}, #{item.createTime}, #{item.updateTime})
        </foreach>

    </insert>

</mapper>
